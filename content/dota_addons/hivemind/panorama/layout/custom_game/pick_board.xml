<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/main.css" />
		<include src="file://{resources}/styles/custom_game/unit_images.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/pick_board.js" />
	</scripts>
	<Panel class="pick_board" hittest="false">
		<Panel id="pick-board-main">
			<Panel id="pick-header">
				<Label id="pick-header-label" />
			</Panel>
			<Panel id="pick-buttons-area" />    <!-- The actual buttons are generated by javascript from the template in pick_hero.xml -->
			<Button id="pick-confirm-button" onactivate="OnPickButtonPressed()">
				<Label id="pick-confirm-button-label" text="#pick" />
			</Button>
		</Panel>
		<Panel id="pick-board-lower">
			<Panel id="pick-tips">
				<Label text="#pick_tips_nohero" id="pick-tips-label" />
			</Panel>
			<Panel id="hero-form-showcase" class="pick-showcase" style="visibility: collapse;">
				<DOTAHeroImage heroimagestyle="landscape" id="hero-form-image" />
				<Panel class="right-panel">
					<Label id="hero-form-label" />
					<Panel id="hero-form-ability-showcase" class="ability-showcase" /> 		<!-- Generated by javascript -->
				</Panel>
			</Panel>
			<Panel id="split-form-showcase" class="pick-showcase" style="visibility: collapse;">
				<Image id="split-form-image" />
				<Panel class="right-panel">
					<Label id="split-form-label" />
					<Panel id="split-form-ability-showcase" class="ability-showcase" /> 	<!-- Generated by javascript -->
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>