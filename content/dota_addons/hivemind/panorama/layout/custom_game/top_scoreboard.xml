<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/top_scoreboard.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/custom_game/top_scoreboard.js" />
	</scripts>
	<Panel class="top_scoreboard">
		<Panel id="left-wrap" class="wrap"> 
			<Panel id="left-hero" class="hero left">
				<DOTAHeroImage heroimagestyle="landscape" onactivate="OnIconClicked('left')" ondblclick="OnIconDoubleClicked('left')" />
			</Panel>
			<Panel id="left-name" class="name left">
				<Label />
			</Panel>
		</Panel>
		
		<Panel id="center">
			<Panel id="center-contents">
				<Label id="left-score" class="score" text="0" />
				<Label id="middle" text="-" />
				<Label id="right-score" class="score" text="0" />
			</Panel>
		</Panel>

		<Panel id="right-wrap" class="wrap">
			<Panel id="right-name" class="name right">
				<Label />
			</Panel>
			<Panel id="right-hero" class="hero right">
				<DOTAHeroImage heroimagestyle="landscape" onactivate="OnIconClicked('right')" ondblclick="OnIconDoubleClicked('right')" />
			</Panel>
		</Panel>
	</Panel>
</root>